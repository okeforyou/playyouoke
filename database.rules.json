{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "rooms": {
      "$roomCode": {
        ".read": true,
        ".write": true,
        "commands": {
          ".read": true,
          ".write": true,
          ".indexOn": [
            "timestamp",
            "status"
          ]
        },
        "state": {
          ".read": true,
          ".write": true
        },
        "participants": {
          ".read": true,
          ".write": true
        }
      }
    },
    "antigravity_rooms": {
      ".read": true,
      ".write": true
    },
    "system": {
      "config": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}